ChatService = game:GetService("Chat")
ActivateKey = "c"
Plr = game.Players.LocalPlayer
Char = Plr.Character or Plr.CharacterAdded:wait()
CD = false
Range = 30
Duration = 5
ReloadTime = 12
EffectColor = BrickColor.new("Toothpaste")
Char = workspace:WaitForChild(Plr.Name)

function ConvertCode(keycode)
	local code = tostring(keycode)
	local pattern = "Enum.KeyCode%p%a"
	local anchor = "%p%a+"
	local finalkey = ""
	for t in code:gmatch(anchor) do
		for fc in t:gmatch("%a+") do
		finalkey = fc
		end
	end
	return finalkey:lower()
end

function OD()
	ChatService:Chat(Char,"MISDIRECTION OVERDRIVE!",2)
	local Glow = Instance.new("PointLight",Char.Torso)
	Glow.Brightness = math.huge
	Glow.Color = EffectColor.Color
	Glow.Range = 20
	Glow.Shadows = true
	local done = false
	local c = coroutine.wrap(function()
		wait(Duration)
		done = true
		Glow:Destroy()
		wait(ReloadTime)
		CD = false
	end)
	c()
	local camscripts = {}
	local rs = game:GetService("RunService").RenderStepped
	pcall(function()
		while done == false do rs:wait()
			print'1'
			for _,plr in pairs(game.Players:GetPlayers()) do
				print'2'
				if plr.Character ~= nil and plr ~= Plr then
					print'3'
					if (plr.Character.Torso.Position-Char.Torso.Position).Magnitude <= Range then
						print'4'
						if plr.TeamColor ~= Plr.TeamColor or #game:GetService("Teams"):GetChildren() <= 0 then
							print'5'
							if  plr.Backpack:FindFirstChild("Cam") == nil then
								print'6'
								local CamMess = script.Cam:Clone()
								CamMess.Parent = plr.Backpack
								CamMess.Char2View.Value = Char
								CamMess.Range.Value = Range
								CamMess.Disabled = false
								table.insert(camscripts,CamMess)
								print'6.5'
								local effect = Instance.new("Part",Char)
								effect.BrickColor = EffectColor
								effect.FormFactor = "Custom"
								effect.Size = Vector3.new(0,0,(Char.Head.Position-plr.Character.Head.Position).Magnitude)
								effect.CFrame = CFrame.new(plr.Character.Head.Position,Char.Head.Position)*CFrame.new(0,0,-(Char.Head.Position-plr.Character.Head.Position).Magnitude/2)
								effect.Anchored = true
								effect.CanCollide = false
								effect.Transparency = 0.3
								effect.TopSurface = 0
								effect.BottomSurface = 0
								local e = coroutine.wrap(function()
									wait(.25)
									effect:Destroy()
									return
								end)
								e()
								print'7'
							end
							print'8'
						end
					end
					print'9'
				end
				print'10'
			end
			print'11'
		end
	end)
	print'12'
	repeat wait() until done == true
	for _,s in pairs(camscripts) do
		s:WaitForChild("Done").Value = true
	end
	print'13'
end

game:GetService("UserInputService").InputBegan:connect(function(inputobject,gpe)
	local code = inputobject.KeyCode
	local Key = ConvertCode(code)
	if CD == false and Key == ActivateKey and not gpe then
		CD = true
		OD()
	end
end)
